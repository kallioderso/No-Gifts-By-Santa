<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="No_Gifts_By_Santa.MVVM.View.SettingsView">
    
    <ContentView.Background>
        <LinearGradientBrush EndPoint="0,1">
            <GradientStop Color="#ffffff" Offset="0.0" />
            <GradientStop Color="#F007FE" Offset="1.0" />
        </LinearGradientBrush>
    </ContentView.Background>
    
    <ContentView.Content>
        <Grid Margin="20">
            <StackLayout Orientation="Vertical">
                <StackLayout Orientation="Horizontal" Spacing="16">
                    <Label Text="Volume Total" FontSize="18"/>
                    <Slider Minimum="0" Maximum="10" Scale="1" ThumbColor="Black" MaximumTrackColor="Azure" HorizontalOptions="FillAndExpand"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal" Spacing="16">
                    <Label Text="Volume Music" FontSize="18"/>
                    <Slider Minimum="0" Maximum="10" Value="1" ThumbColor="Black" MaximumTrackColor="Azure" MinimumTrackColor="CadetBlue" HorizontalOptions="FillAndExpand"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal" Spacing="16">
                    <Label Text="Volume Sounds" FontSize="18"/>
                    <Slider Minimum="0" Maximum="10" Scale="1" Width="100" ThumbColor="Black" MaximumTrackColor="Azure" HorizontalOptions="FillAndExpand" />
                </StackLayout>
                <StackLayout Orientation="Horizontal" Spacing="16">
                    <Label Text="Pauls" FontSize="18"/>
                    <Slider Minimum="0" Maximum="10" Scale="1" ThumbColor="Black" MaximumTrackColor="Azure" HorizontalOptions="FillAndExpand"/>
                </StackLayout>
            </StackLayout>
        </Grid>
    </ContentView.Content>
</ContentView>