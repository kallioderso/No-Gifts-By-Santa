<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="No_Gifts_By_Santa.MVVM.View.CreditsView">
    
    <ContentView.Background>
        <LinearGradientBrush EndPoint="0,1">
            <GradientStop Color="#ffffff" Offset="0.0" />
            <GradientStop Color="#F9FF0F4B" Offset="1.0" />
        </LinearGradientBrush>
    </ContentView.Background>
    
    <ContentView.Content>
        <Grid Margin="20">
            <StackLayout Orientation="Vertical" HorizontalOptions="Center" VerticalOptions="Center" Spacing="8">
                <StackLayout Orientation="Horizontal" Spacing="12">
                    <Label Text="Programming:" TextColor="Indigo" FontSize="20" FontAttributes="Bold"/>
                    <Label Text="Pascal Lösch" TextColor="Azure" TextDecorations="Underline" FontSize="18" FontAttributes="Italic"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal" Spacing="12">
                    <Label Text="Designing:" TextColor="Indigo" FontSize="20" FontAttributes="Bold"/>
                    <Label Text="Lena Röder" TextColor="Azure" TextDecorations="Underline" FontSize="18" FontAttributes="Italic"/>
                </StackLayout>
            </StackLayout>
        </Grid>
    </ContentView.Content>
</ContentView>